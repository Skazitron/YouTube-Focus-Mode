{
  "manifest_version": 3,
  "name": "YouTube Focus Mode",
  "version": "1.0",
  "description": "Replaces the YouTube homepage feed with a focused interface.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
  } 
}
